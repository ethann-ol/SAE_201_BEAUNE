<Window
    x:Class="SAE_201_BEAUNE.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_BEAUNE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Course Beaune"
    Width="1200"
    Height="600"
    Closing="Window_Closing"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:ApplicationData x:Name="data" />
    </Window.DataContext>

    <Grid>
        <TabControl>
            <TabItem Header="Inscrire Course">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="239*" />
                        <ColumnDefinition Width="358*" />
                    </Grid.ColumnDefinitions>
                    <Image
                        x:Name="logoImg"
                        Grid.Row="1"
                        Width="195"
                        Height="101"
                        Margin="0,102,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        RenderTransformOrigin="0.06,0.001"
                        Source="/img/Logo-Semi-Beaune.png" />
                    <DataGrid
                        x:Name="dataCourse"
                        IsReadOnly="True"
                        ItemsSource="{Binding LesCourses}">
                    </DataGrid>
                    <DataGrid
                        x:Name="dataCoureur"
                        Grid.Column="1"
                        IsReadOnly="True"
                        ItemsSource="{Binding LesCoureurs}">
                    </DataGrid>
                    <StackPanel x:Name="StackInscrire" Grid.Column="1" Grid.Row="1">
                        <Button x:Name="butAjouter" ToolTip="Ajouter un nouveau département" Margin="10,0,0,0" Click="butAjouter_Click" Height="50" Width="50" >
                            <Image Source="img\ajouter.png" />
                        </Button>
                    </StackPanel>

                </Grid>
            </TabItem>
            <TabItem Header="Les Inscriptions">
                <Grid Background="#FFE5E5E5" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="dataInscription" />
                    <DataGrid Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
