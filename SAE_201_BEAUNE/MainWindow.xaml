<Window
    x:Class="SAE_201_BEAUNE.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_BEAUNE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Course Beaune"
    Width="800"
    Height="450"
    Closing="Window_Closing"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:ApplicationData x:Name="data" />
    </Window.DataContext>

    <Grid>
        <TabControl>
            <TabItem Header="Inscrire Course">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="138*" />
                        <ColumnDefinition Width="259*" />
                    </Grid.ColumnDefinitions>
                    <Image
                        x:Name="logoImg"
                        Grid.Row="1"
                        Width="195"
                        Height="101"
                        Margin="0,102,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        RenderTransformOrigin="0.06,0.001"
                        Source="/img/Logo-Semi-Beaune.png" />
                    <DataGrid
                        x:Name="dataCourse"
                        AutoGenerateColumns="False"
                        IsReadOnly="True"
                        ItemsSource="{Binding LesCourses}">
                        <DataGrid.Columns>

                            <DataGridTextColumn Binding="{Binding Num_course}" Header="NumCourse" />
                            <DataGridTextColumn Binding="{Binding Nom_course}" Header="NomCourse" />
                            <DataGridTextColumn Binding="{Binding Distance}" Header="Distance" />
                            <DataGridTextColumn Binding="{Binding Heure_depart}" Header="Heure" />
                            <DataGridTextColumn Binding="{Binding Prix_inscription}" Header="Prix" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <DataGrid
                        x:Name="dataCoureur"
                        Grid.Column="1"
                        AutoGenerateColumns="False"
                        IsReadOnly="True"
                        ItemsSource="{Binding LesCoureurs}">
                        <DataGrid.Columns>

                            <DataGridTextColumn Binding="{Binding Num_coureur}" Header="Numéro Coureur" />
                            <DataGridTextColumn Binding="{Binding Code_club}" Header="Code Club" />
                            <DataGridTextColumn Binding="{Binding Num_federation}" Header="Fédération" />
                            <DataGridTextColumn Binding="{Binding Nom_coureur}" Header="Nom" />
                            <DataGridTextColumn Binding="{Binding Lien_photo}" Header="Photo" />
                            <DataGridTextColumn Binding="{Binding Prenom_coureur}" Header="Prénom" />
                            <DataGridTextColumn Binding="{Binding Ville_coureur}" Header="Ville" />
                            <DataGridTextColumn Binding="{Binding Portable}" Header="Portable" />
                            <DataGridTextColumn Binding="{Binding Sexe}" Header="Sexe" />
                            <DataGridTextColumn Binding="{Binding Num_licence}" Header="Licence" />
                        </DataGrid.Columns>
                    </DataGrid>

                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
        </TabControl>

    </Grid>
</Window>
