<Window
    x:Class="SAE_201_BEAUNE.Connexion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_BEAUNE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Connexion"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel x:Name="stackConnexion" HorizontalAlignment="Center">
            <Image
                x:Name="imgLogo"
                Width="150"
                Height="150"
                Source="/img/Logo-Semi-Beaune.png" />
            <Label x:Name="labelID" Content="Identifiant" Margin="0,5,0,0"  Target="{Binding ElementName=textID, Mode=OneWay}"/>
            <TextBox
                x:Name="textID"
                Text="{Binding labelID}"
                TextWrapping="Wrap" Margin="0,5,0,0" 
                />
            <Label x:Name="labMdp" Content="Mot de Passe" Margin="0,5,0,0" Target="{Binding ElementName=textMdp, Mode=OneWay}"/>
            <TextBox
                x:Name="textMdp"
                Text="{Binding labMdp}"
                TextWrapping="Wrap" Margin="0,5,0,0" />
            <Button x:Name="butConnexion" Content="Connexion" Margin="0,20,0,0" />

        </StackPanel>

    </Grid>
</Window>
