<Window
    x:Class="SAE_201_BEAUNE.Connexion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_BEAUNE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Connexion"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <StackPanel x:Name="stackConnexion" HorizontalAlignment="Center">
            <Image
                x:Name="imgLogo"
                Width="150"
                Height="150"
                Source="/img/Logo-Semi-Beaune.png" />
            <Label x:Name="labelID" Content="Identifiant" />
            <TextBox
                x:Name="textID"
                Text=""
                TextWrapping="Wrap" />
            <Label x:Name="labMdp" Content="Mot de Passe" />
            <TextBox
                x:Name="textMdp"
                Text=""
                TextWrapping="Wrap" />
            <Button x:Name="butConnexion" Content="Button" />

        </StackPanel>

    </Grid>
</Window>
